# Kaggle API Credentials (optional, for dataset access)
# Get these from https://www.kaggle.com/settings/account -> API -> Create New Token
KAGGLE_USERNAME=your_username
KAGGLE_KEY=your_api_key

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
API_WORKERS=1
API_DEBUG=False

# Model Configuration
DEFAULT_MODEL_PATH=energy_consumption_model.pkl
CACHE_DIR=weather_cache/
MODEL_VERSION=1.0.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Performance Settings
MAX_PREDICTION_BATCH_SIZE=100
ENABLE_CACHING=True
CACHE_TTL_SECONDS=3600

# Weather API Settings (KNMI)
WEATHER_API_TIMEOUT=30
WEATHER_RETRY_ATTEMPTS=3

# Security Settings (for production)
# SECRET_KEY=your-secret-key-here
# ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com